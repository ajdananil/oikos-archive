[
  {{- $pages := where .Site.RegularPages "Section" "species" -}}
  {{- range $index, $page := $pages -}}
    {{- if $index }},{{ end -}}
    {
      "scientificName": {{ $page.Params.title | jsonify }},
      "commonNames": {
        {{- $commonNames := $page.Params.commonNames -}}
        {{- $lenCommonNames := len $commonNames -}}
        {{- $counter := 0 -}}
        {{- range $lang, $details := $commonNames -}}
          {{- $counter = add $counter 1 -}}
          {{ $lang | jsonify }}: {{ (index $details "name") | jsonify }}{{ if lt $counter $lenCommonNames }},{{ end }}
        {{- end }}
      }
    }
  {{- end }}
]

